<h2>Réservation</h2>
<form method="POST" id="booking">
	<input type="hidden" name="action" value="delivery">
	<fieldset>
		<legend>Coordonnées</legend>
		<label for="name">Nom :</label><input type="text" name="name" placeholder="Votre nom" id="name">
		<label for="tel">Tél :</label><input type="text" name="tel" placeholder="Votre numéro de téléphone" id="tel">
		<label for="address">Adresse :</label><input type="text" name="address" placeholder="Votre adresse" id="address">
		<label for="city">Ville :</label><input type="text" name="city" placeholder="Votre ville" id="city">
	</fieldset>
	<fieldset>
		<label for="comment">Commentaire :</label><textarea id="comment" placeholder="Un commentaire ?"></textarea>
	</fieldset>
	<fieldset>
		<legend>Réservation</legend>
		<label for="date">Date de réservation :</label><input type="datetime-local" name="date" id="date" value="">
	</fieldset>
	<fieldset>
		<button type="submit">Commandez</button>
	</fieldset>
</form>